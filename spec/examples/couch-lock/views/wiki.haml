- wiki_defaults
.row{ "ng-controller" => "WikiController" }
  .col-md-4.col-md-offset-4.col-xs-12
    %p.text-center
      %input{ "type" => "text", "ng-model" => "wiki.title", "ng-model-options" => "{debounce: 1000}" }
    %textarea{ "auto-focus" => true, "ng-model" => "wiki.body", "ng-model-options" => "{debounce: 1000}" }
